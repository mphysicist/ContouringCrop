<UserControl x:Class="june19.UI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:june19"
             mc:Ignorable="d" 
             Height="760" Width="1150" Background="Wheat">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="110"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>

                </Grid.RowDefinitions>
                <Label Content="Following are the available structures:" Grid.Row="0" FontWeight="ExtraBold" FontSize="14" Margin="33,0,0,0" />
                <ListBox x:Name="LSTBX" Grid.Row="1" FontWeight="Bold" SelectedItem="selection" SelectionMode="Multiple" TabIndex="2147483647" Margin="10,20,24,0" />
               
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Height="40">
                    <Button Width="90" Content="ADD HD PTV" x:Name="PtvAdd" Click="PtvAdd_Click" Background="LightGray" Foreground="Black" Height="30" Margin="12 0 10 0"/>
                    <TextBox x:Name="selected_ptv" Width="222" />
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Height="40" >
                    <Button Width="90" Content="ADD LD PTV" x:Name="PtvAdd2" Click="PtvAdd2_Click" Background="LightGray" Foreground="Black" Height="30" Margin="12 0 10 0"/>
                    <TextBox x:Name="selected_ptv2" Width="222" />
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Height="100">
                    <Button Width="90" Height="80" Content="ADD OAR" x:Name="OarAdd" Margin="12 5 10 5" Click="OarAdd_Click" Background="LightGray" Foreground="Black"/>
                    <ListBox x:Name="abcd" Width="222" Height="100" SelectionMode="Extended"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="clear_ptv" Height="25" Content="CLEAR PTV" Click="clear_ptv_Click" Width="120" Margin="50 0 0 0"/>
                    <Button x:Name="clear_oar" Height="25" Content="CLEAR OAR" Click="clear_oar_Click" Width="120" Margin="10 0 0 0"/>
                </StackPanel>

                <Button x:Name="dup_button" Click="dup_button_Click"  Content="Duplicate selected structures"  Grid.Column="0" Margin="0 0 0 0" Grid.Row="6" Width="177" Height="30" />

                
            </Grid>            
                      
            

            

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <Grid Height="670">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="45"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>

                <Label Content="Duplicate OARs" FontWeight="ExtraBold" FontSize="14" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Height="40" Margin="40,0,41,10" VerticalAlignment="Bottom" Width="150" Grid.RowSpan="2"/>
                <ListBox x:Name="dup_oar" HorizontalAlignment="Left" Height="400" Grid.Row="2" VerticalAlignment="Top" Width="235"/>
                <Label Content="Duplicate PTV" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Height="35" FontWeight="ExtraBold" FontSize="14" Margin="8,0,0,0" Grid.RowSpan="2" Width="150" />
                <ListBox x:Name="dup_ptv" HorizontalAlignment="Left" Height="115" Margin="0,15,0,0" Grid.Row="4" VerticalAlignment="Top" Width="235" />
                <Label Content="Margin from PTV" FontWeight="ExtraBold" FontSize="13" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Height="40" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="130" Grid.RowSpan="2"/>
                <Label Content="Margin from Body" FontWeight="ExtraBold" FontSize="13" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" Height="35" Margin="0,0,0,120" VerticalAlignment="Bottom" Width="130" Grid.RowSpan="2"/>
                <TextBox x:Name="marginFrmbody" Grid.Row="4" Grid.Column="1" Height="30" Width="50"/>
                <StackPanel x:Name="PTVmargin" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>


            </Grid>
            <Button Content="Crop the duplicated structures" x:Name="crop_button" Click="crop_button_Click" Height="32" Margin="10,0,143,0" RenderTransformOrigin="0.507,1.037"/>

        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="3">
            <Grid Height="730">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="270"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Miscellaneous" Grid.Row="0" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="14" Margin="128,0,118,0" Width="115"/>
                <Button x:Name="rmv_struc" Grid.Row="1" Content="Delete the empty structures" Click="rmv_struc_Click" Margin="80,37,84,78"/>

                <ComboBox x:Name="cb" MouseDoubleClick="cb_MouseDoubleClick" Grid.Row="2" Margin="60,10,60,224"/>
                <Label Content="  Selected structure:" FontWeight="Bold" Grid.Row="2" Margin="1,64,232,173" />
                <Label Content="  Inner Margin:" FontWeight="Bold" Grid.Row="2" Margin="0,106,239,134" />
                <Label Content="  Outer Margin:" FontWeight="Bold" Grid.Row="2" Margin="1,141,238,97" />
                <TextBox x:Name="selected_strtr" Grid.Row="2" Margin="129,64,22,173"/>
                <TextBox x:Name="inner_margin" Grid.Row="2" Margin="129,102,147,134"/>
                <TextBox x:Name="outer_margin" Grid.Row="2" Margin="129,141,148,96"/>
                <Button x:Name="create_ring" Click="create_ring_Click" Grid.Row="2" Content="Click to generate ring" Margin="60,258,60,231" Grid.RowSpan="2"/>
                <Label Content="  Edit to change ring name:" FontWeight="Bold" Grid.Row="2" Margin="1,178,196,60" />
                <TextBox x:Name="ring_name" Grid.Row="2" Margin="170,179,23,58"/>
                <TextBlock TextWrapping="Wrap" Margin="10,80,23,10" Grid.Row="3">
                    Instructions: 1) All the margins used are in mm. 2) In the ring creation, select the structure from drop down and double click on it. 3) If any error occurs during execution of script, please abort the script, close the patient and discard all the changes. ********************************************************************************************************************************** (This script was developed by medical physics resident Deepak Mahor of 2022-23 batch under the supervision of Mr. Vinay Saini at TMC, Varanasi)
                </TextBlock>
                <Rectangle Fill="Black" HorizontalAlignment="Left" Height="2" Margin="1,138,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="360"/>
                <Rectangle Fill="Black" HorizontalAlignment="Left" Height="2" Margin="0,62,0,0" Grid.Row="3" Stroke="Black" VerticalAlignment="Top" Width="360"/>
                <Rectangle Fill="Black" HorizontalAlignment="Left" Height="730" Margin="357,-13,0,0" Stroke="Black" VerticalAlignment="Top" Width="2" Grid.RowSpan="4"/>
                <Rectangle Fill="Black" HorizontalAlignment="Left" Height="785" Margin="0,-53,0,-2" Stroke="Black" VerticalAlignment="Top" Width="2" Grid.RowSpan="4"/>

            </Grid>



        </StackPanel>
    </Grid>
</UserControl>
